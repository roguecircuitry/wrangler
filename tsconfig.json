{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "outDir": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/images"
  ]
}